<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/cinza"


    tools:context="com.example.daniel.database.Acrescimos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:orientation="vertical"
        android:padding="10px"

        android:layout_marginTop="10px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:background="@color/cinza">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha os adicionais:"
            android:id="@+id/textView1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="50px"
            android:layout_marginTop="20px"
            android:textColor="#006400"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complemento Catupiry"
            android:id="@+id/checkBox"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60px"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complemento Palmito"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complemento Tomate"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_marginBottom="30px"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirmar"
            android:text="@string/btn_confirmar"

            android:background="#228B22"
            android:textColor="#FFF"
            android:textStyle="bold"

            android:layout_above="@+id/checkBox3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_marginBottom="30px"
            android:onClick="acrescimos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:id="@+id/idAcrescimos"
            android:text="Valor Total"
            android:textAlignment="center"
            android:textSize="40px"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:textStyle="italic"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="Comprar"
            android:id="@+id/button2"
            android:layout_marginTop="30px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="#228B22"
            android:textColor="#FFF"
            android:textStyle="bold"/>


    </LinearLayout>

</RelativeLayout>
